{
    "manifest_version": 3,
    "name": "BIGFOOT - Internet Sharing",
    "version": "1.0",
    "description": "Compartilhe sua internet ociosa e ganhe recompensas em Nano!",
    "action": {
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "storage",
        "tabs",
        "action",
        "notifications"
    ],
    "host_permissions": [
        "https://api.ipify.org/*"
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}
